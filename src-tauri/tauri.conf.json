{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "thq",
	"version": "0.1.0",
	"identifier": "me.tinykitten.trainlcd.telemetryhq",
	"build": {
		"beforeDevCommand": "npm run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "npm run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "thq",
				"fullscreen": true,
				"height": 720,
				"resizable": true,
				"width": 1280,
				"alwaysOnTop": true,
				"maximized": false,
				"decorations": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"cli": {
			"description": "Telemetry Headquarters",
			"args": [
				{
					"short": "s",
					"name": "enable-server",
					"description": "Enable WebSocket backend server"
				}
			]
		}
	}
}
